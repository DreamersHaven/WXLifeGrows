.but.noborder{
  width: 100%;
  height: 200rpx;
  margin-top: 20rpx;
  background-color: whitesmoke;
  color: #999999;
  border-radius: 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}

.but.noborder::after {
  border: 0; 
}

.round-click{
    height: 90rpx;
    width: 90rpx;
    background-color: #2d8cf0;
    border-radius: 100%;
    position: fixed;
    bottom: 100rpx;
    right: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9;
}
.roundBut-click{
    height: 100rpx;
    width: 100rpx;
    background-color: rgb(248, 246, 74);
    border-radius: 100%;
    position: fixed;
    bottom: 5rpx;
    left: 250rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9;
}
.round-click navigator{
    font-size: 32rpx;
    max-width: 80rpx;
    color: #fff;
    text-align: center;
}

