/**app.wxss**/

.container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 

.comment-title {
	/*border: 1px solid black;*/
	display: flex;
	justify-content: center;
	align-items: center;
	margin-bottom: 30rpx;
  font-size: 20px;
  margin-top: 20px;
}

.comment-toprow {
  margin-top: 30px;
}


/*tabBar*/
.tab-bar {
  position: fixed;
  z-index: 99999;
  width: 100%;
  height: 100rpx;
  /*line-height: 100rpx;*/
  font-size: 22rpx;
  color: #9b9b9b;
  background: #fff;
  text-align: center;
  display: -webkit-flex;
  display:flex;
}

.tab-bar .menu-item {
  display: block;
  flex: 1;
  /*width: 33.3%;*/
  height: 100%;
}

.tab-bar .menu-item image {
  margin: 10rpx auto 0 auto;
  display: block;
  width: 50rpx;
  height: 50rpx;
}

.tab-bar .menu-item.active {
  color: #53df87;
}
.topic-text{
 	display: flex;
	justify-content: center;
	align-items: center;
	margin-bottom: 30rpx;
  font-size: 10px;
  margin-top: 20px;
}

/* border-radius: 98rpx;是控制按钮边变圆 */
.button.yellowbutton {
  margin-top: 30px;
  width: 40%;
  background-color: rgb(252, 126, 67);
  color: white;
  border-radius: 20rpx;
  background: bg_red;
  opacity:0.9;
}
 
/* 按下变颜色 */
.hover.yellowbutton {
  background:  rgb(236, 179, 156);
}

/* border-radius: 98rpx;是控制按钮边变圆 */
.button.bluebutton {
  margin-top: 30px;
  width: 40%;
  background-color:#2d8cf0;
  color: white;
  border-radius: 20rpx;
  background: bg_red;
  opacity:0.9;
}

/* border-radius: 98rpx;是控制按钮边变圆 */
.button.small {
  
  width: 80%;
  background-color:#e9eaec;
  color:#495060;
  border-radius: 15rpx;
  background: bg_red;
  opacity:0.9;
  font-size: 13px;
}
 
/* 按下变颜色 */
.hover.bluebutton {
  background: #5cadff;
}


.but.noborder{
  width: 100%;
  height: 200rpx;
  margin-top: 20rpx;
  background-color: whitesmoke;
  color: #999999;
  border-radius: 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}

.but.noborder::after {
  border: 0; 
}

.round-click{
    height: 90rpx;
    width: 90rpx;
    background-color: #2d8cf0;
    border-radius: 100%;
    position: fixed;
    bottom: 100rpx;
    right: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9;
}
.round-click navigator{
    font-size: 32rpx;
    max-width: 80rpx;
    color: #fff;
    text-align: center;
}
 
