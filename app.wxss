.container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 

.comment-title {
	/*border: 1px solid black;*/
	display: flex;
	justify-content: center;
	align-items: center;
	margin-bottom: 30rpx;
  font-size: 20px;
  margin-top: 20px;
}

.comment-toprow {
  margin-top: 30px;
}


 
.topic-text{
 	display: flex;
	justify-content: center;
	align-items: center;
	margin-bottom: 30rpx;
