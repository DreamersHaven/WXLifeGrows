.invite {
  /* display: none; */
  width: 70%;
  font-size: 25rpx;
  height: 80rpx;
  line-height: 50rpx;
  padding-left: 20rpx;
  position: relative;
  margin: 1rpx auto 0 120rpx;
  background-color: #f8f8f9;
  border: 1px solid #dddee1;
  border-radius: 5px;
  
}
.invite:after {
  content: '';
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  top: -11rpx;
  left: 20rpx;
  transform: rotate(45deg);
  background-color: #f8f8f9;
  border: 1px #dddee1;
  border-style: solid none none solid ;
}
 
