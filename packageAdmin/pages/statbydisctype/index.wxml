<view>

  <i-row>
    <i-col span="8" i-class="progress-item">点击进度条查看详细 </i-col>
    <i-col span="8" i-class="col-class">
      <button class="button.small" bindtap="handleAdd">升序</button>
    </i-col>
    <i-col span="8" i-class="col-class">
      <button class="button.small" bindtap="handleReduce">降序</button>
    </i-col>
  </i-row>

</view>


<view class="progress-item" wx:for="{{list}}">
  {{item.discType}}: {{item.num}}
  <i-progress percent="{{item.discTypeName}}"></i-progress>

</view>